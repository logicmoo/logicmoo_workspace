fcpt0(Fact,F) :- 
  lookup_u(pt(F,Body)),
  (mpred_eval_lhs(Body,(Fact,pt(F,Body)))
    *-> mpred_trace_msg('Using',pt(F,Body));
      (mpred_trace_msg('Skipped',pt(F,Body)),fail)).
  

fcpt0(Fact,F) :- use_presently,
  lookup_u(pt(presently(F),Body)),
