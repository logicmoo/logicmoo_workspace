  % (call_prologsys(Test) -> mpred_eval_lhs(Body,WS)),
   ((no_repeats(call_prologsys(Test)) , 
       (mpred_eval_lhs(Body,WS))) *-> true ; (!,fail)).

mpred_eval_lhs0(rhs(X),WS) :-
   cyclic_break(X),
