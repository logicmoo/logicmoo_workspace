allxml: $(addsuffix .xml, $(STANDARDMIZ))
allxml1: $(addsuffix .xml1, $(SHMIZ))
allxml2: $(addsuffix .xml2, $(SHMIZ))
allbex1: $(addsuffix .bex1, $(STANDARDMIZ))
allexp: $(addsuffix .exp, $(STANDARDMIZ))
